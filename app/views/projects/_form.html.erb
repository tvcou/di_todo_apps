<%= form_for @project do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  <% if @project.errors.any? %>     <%# project.errorsにエラーがあるかどうかで条件分岐 %>
    <%= @project.errors.inspect %><br>     <%# いっぱい表示される %>
    <%= @project.errors.messages[:title][0] %>     <%# 少しだけ表示される %>
  <% end %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
